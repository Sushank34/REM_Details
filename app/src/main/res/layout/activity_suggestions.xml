<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/subramanayam"
    tools:context=".Suggestions">

    <ImageView
        android:id="@+id/im"
        android:layout_width="410dp"
        android:layout_height="230dp"
        android:layout_marginRight="500dp"
        android:src="@drawable/subramanayam" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:text=" WE WOULD LIKE TO HEAR FROM YOU"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:fontFamily="@font/candal" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="380dp"
        android:background="#FFFFFF"
        android:hint="  Enter your suggestion"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="249dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="Suggest us any coding site or contest you think should be added to the app"
        android:textColor="#0B0A0A"
        android:textSize="25dp"
        app:fontFamily="@font/alike_angular" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="100dp"
        android:background="#F1EBEB"
        android:textSize="30dp"
        android:textColor="#000000"
        android:text="   SUGGEST   "
        />

    <ImageView
        android:id="@+id/imt"
        android:layout_width="70dp"
        android:layout_height="94dp"
        android:layout_marginTop="250dp"
        android:layout_marginRight="500dp"
        android:background="#FFFFFF"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="3dp"
        android:src="@drawable/subramanayam" />
</RelativeLayout>